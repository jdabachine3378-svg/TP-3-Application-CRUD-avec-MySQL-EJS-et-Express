<!-- Alerte Bootstrap pour afficher les erreurs -->
<div class="alert alert-danger" role="alert">
    <!-- Titre de l'erreur -->
    <h1 class="alert-heading">Erreur</h1>
    <hr>
    <!-- Message d'erreur dynamique (variable EJS) -->
    <p class="mb-0"><%- message %></p>
</div>

<!-- Bouton pour retourner à la liste des produits -->
<div class="mt-3">
    <a href="/products" class="btn btn-primary">Retour à la liste des produits</a>
</div>

